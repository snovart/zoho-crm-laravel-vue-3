{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,

    "lib": ["ESNext", "DOM"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },

    "types": ["vite/client"],
    "noEmit": true
  },
  "include": ["resources/js/**/*", "resources/**/*.vue"]
}
